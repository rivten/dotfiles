# To put in ~/.gitconfig
[user]
    name = rivten
    email = rivten@riseup.net
[core]
    editor = nvim
    excludesFile = ~/.gitignore
	pager = bat -p
	quotePath = false
	commitGraph = true
[merge]
    conflictstyle = diff3
[push]
    default = tracking
[github]
    user = rivten
[receive]
	advertisePushOptions = true
[gc]
	writeCommitGraph = true
[commit]
	verbose = true
